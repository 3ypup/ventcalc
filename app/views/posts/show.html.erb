

<!--PostText-->
<div class="container">
    <div class="well"> 
        <div class="row">
             <div class="col-md-12">
              <div class="alert alert-secondary" role="alert">
                 <div class="row hidden-md hidden-lg"><h1 class="text-center" ><%= @post.title %></h1></div>
                     
                 <div class="pull-left col-md-4 col-xs-12 thumb-contenido"><img class="center-block img-responsive" src='http://geekandsundry.com/wp-content/uploads/2016/08/Harmonquest-1.jpg' /></div>
                 <div class="">
                     <h1  class="hidden-xs hidden-sm"><%= @post.title %></h1>
                     <hr>
                     <small>10 - 04 -2017</small><br>
                     <small><strong><%= @post.author %></strong></small>
                     <hr>
                     <p class="text-justify"><%= @post.content %></p></div>
             </div>
            </div> 
        </div>
    </div>
</div>






<!--comments-->
<div style="padding: 20px 20% 0 20%; background-color: mediumorchid;">
<div class="chat_list">
  <% @post.comments.reverse_each do |comment| %>
    <ul class="list-group">
        <li class="list-group-item">
            <div class="pull-left hidden-xs">
                <div>
                    <img class="img-circle"  src="https://us.v-cdn.net/5019558/uploads/userpics/753/nZ60314DHZQ4A.jpg">                    
                </div>
            </div>
            <small class="pull-right text-muted"><%= comment.created_at %></small>
            <div>
                <small class="list-group-item-heading text-muted text-primary"><%= comment.author %></small>
                <p class="list-group-item-text">
                    <%= comment.text %>
                </p>
            </div>
        </li>
    </ul>
    <%end%>
</div>
</div>





